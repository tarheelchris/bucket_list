<div class = "signuptitle">
<h1>Sign In</h1>
</div>

<%= form_tag sessions_url do %>
  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, :size => 40, :placeholder => 'Enter email address here' %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>

  <%= submit_tag 'Log in', :class => "btn" %>

<% end %>

